<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/first_keyline"
    android:paddingLeft="@dimen/dialog_margin"
    android:paddingRight="@dimen/dialog_margin"
    android:paddingTop="@dimen/first_keyline">

    <TextView
      android:id="@+id/tv_title"
      style="@style/text_title_dark"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/app_name"/>

    <TextView
      android:id="@+id/tv_version"
      style="@style/text_caption_dark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="V 1.0.0"/>

  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="@dimen/first_keyline"
      android:paddingLeft="@dimen/dialog_margin"
      android:paddingRight="@dimen/dialog_margin"
      android:paddingTop="@dimen/first_keyline">

      <TextView
        android:id="@+id/tv_body"
        android:linksClickable="true"
        style="@style/text_body1_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="body text goes here"/>

      <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/md_button_height"
        android:layout_marginTop="@dimen/first_keyline_half"
        android:text="@string/show_intro"/>

    </LinearLayout>

  </ScrollView>

</LinearLayout>